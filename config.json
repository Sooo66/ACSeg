{
    "name": "Pascal_ACSeg",
    "n_gpu": 1,

    "arch": {
        "type": "ACSeg",
        "args": {
            "num_prototypes": 5,
            "num_layers": 6,
            "d_model": 384,
            "num_heads": 6,
            "d_ff": 1024,
            "dropout": 0.0
            }
    },
    "data_loader": {
        "type": "PascalVOCDataLoader",
        "args":{
            "data_path": "data/processed_dataset.pkl",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0.01,
            "amsgrad": true
        }
    },
    "loss": "ModularityLoss",
    "metrics": [
        
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "off",
        "early_stop": 10,

        "tensorboard": true
    }
}
